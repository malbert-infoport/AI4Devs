{
  "ConnectionStrings": {
    "DefaultConnection": "#{ModeloEntidades}#"
  },
  "HelixConfiguration": {
    "ApplicationName": "InfoportOneAdmon.Back",
    "RolPrefixes": "HLX_,admin",
    "PermisionsMinutesCache": 5,
    "DBMSType": 1
  },
  "Authentication": {
    "UseJWTSchemes": false,
    "DefaultScheme": "code",
    "Schemes": [
      {
        "AuthenticationScheme": "code",
        "AllowedClientIds": "angularclient",
        "AllowedCorsOrigins": "http://localhost:4200",
        "Authority": "http://localhost:8091/auth/realms/Helix6",
        "MetadataAddress": "http://localhost:8091/auth/realms/Helix6/.well-known/openid-configuration",
        "RequireHttpsMetadata": false,
        "SaveToken": true,
        "ValidateAudience": true,
        "ValidAudience": "angularclient",
        "ValidateIssuer": true,
        "ValidIssuer": "http://localhost:8091/auth/realms/Helix6",
        "ValidateLifetime": true,
        "ValidateIssuerSigningKey": true
      },
      {
        "AuthenticationScheme": "clientCredentials",
        "AllowedClientIds": "serviceclient",
        "AllowedCorsOrigins": "http://localhost:4200",
        "Authority": "http://localhost:8091/auth/realms/Helix6",
        "MetadataAddress": "http://localhost:8091/auth/realms/Helix6/.well-known/openid-configuration",
        "RequireHttpsMetadata": false,
        "SaveToken": true,
        "ValidateAudience": true,
        "ValidAudience": "account",
        "ValidateIssuer": true,
        "ValidIssuer": "http://localhost:8091/auth/realms/Helix6",
        "ValidateLifetime": true,
        "ValidateIssuerSigningKey": true
      }
    ],
    "ReferenceTokenSchemes": [
      {
        "AuthenticationScheme": "code",
        "AllowedCorsOrigins": "",
        "IntrospectionEndpoint": "#{IntrospectionEndpoint}#",
        "UserInfoEndpoint": "#{UserClaimsEndPoint}#",
        "DisableHttpsCertificate": false,
        "IntrospectionUser": "#{IntrospectionUser}#",
        "IntrospectionPassword": "#{IntrospectionPassword}#",
        "MinutesCache": 5
      },
      {
        "AuthenticationScheme": "clientCredentials",
        "AllowedCorsOrigins": "",
        "IntrospectionEndpoint": "#{IntrospectionEndpoint}#",
        "UserInfoEndpoint": "",
        "DisableHttpsCertificate": false,
        "IntrospectionUser": "#{IntrospectionUser}#",
        "IntrospectionPassword": "#{IntrospectionPassword}#",
        "MinutesCache": 5
      }
    ]
  },
  "AttachmentDriveSource": {
    "Folder": "#{RutaAdjuntos}#",
    "UseEntityDescriptionAsDirectory": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "InfoportOneAdmon.Back.Api"
    ],
    "MinimumLevel": "#{LogLevel}#",
    "Override": {
      "Microsoft.AspNetCore": "Warning",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "#{LogPath}#/logInfoportOneAdmon.Back-.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 10,
          "rollingInterval": "Hour",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "Properties": {
      "Application": "InfoportOneAdmon.Back.Api"
    }
  }
}